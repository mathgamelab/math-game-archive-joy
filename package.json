{
  "name": "math-game-archive-joy",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/main",
    "dev:main": "npm run dev --workspace=apps/main",
    "dev:edugame-builder": "npm run dev --workspace=apps/edugame_builder",
    "build": "npm run build:all",
    "build:all": "npm run build --workspace=apps/edugame_builder && npm run build --workspace=apps/main",
    "build:main": "npm run build --workspace=apps/main",
    "build:edugame-builder": "npm run build --workspace=apps/edugame_builder",
    "lint": "npm run lint --workspace=apps/main",
    "parse-pdf": "node scripts/parse-pdf.js"
  },
  "devDependencies": {
    "pdf-parse": "^1.1.4"
  }
}
